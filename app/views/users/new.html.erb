<h1>Create New User</h1>

<%if flash[:user_errors]%>
<%flash[:user_errors].each do |error| %>
    <p><%= error %></p>
  <%end%> 
<%end%>

<%= form_for @user do |f| %>
<%= f.label :username, "Username:" %><br>
<%= f.text_field :username %><br>
<br>
<%= f.label :first_name, "First Name:" %><br>
<%= f.text_field :first_name%><br>
<br>
<%= f.label :last_name, "Last Name:" %><br>
<%= f.text_field :last_name %><br>
<br>
<%= f.label :email, "Email:" %><br>
<%= f.text_field :email %><br>
<br>
<%= f.label :birth_date, "Date of Birth:" %><br>
<%= f.text_field :birth_date %><br>
<br>
<%= f.label :password, "Create Password:" %><br>
<%= f.text_field :password %><br>

<%= f.submit "Create Profile" %><br><br>

<% end %>